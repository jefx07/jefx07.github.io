---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
  <title>{{ site.title | xml_escape }}</title>
  {% if site.tagline %}
  <subtitle>{{ site.tagline | xml_escape }}</subtitle>
  {% endif %}
  <link  rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}"/>
  <link rel="alternate" type="text/html" href="{{ '/' | absolute_url }}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ page.url | absolute_url | xml_escape }}</id>
  <author>
    <name>{% if site.author.name %}{{ site.author.name }}{% else %}{{ site.title }}{% endif %}</name>
    {% if site.author.email %}<email>{{ site.author.email }}</email>{% endif %}
  </author>
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>

  {% for post in site.posts limit:15 %} {% unless post.draft %}
  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <link rel="alternate" type="text/html" title="{{ post_title }}" href="{{ post.url | absolute_url }}"/>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
    <id>{{ post.id | absolute_url | xml_escape }}</id>
    <content type="html">{{ post.content | strip | xml_escape }}</content>
    <summary>{{ post.content | strip_html | xml_escape | normalize_whitespace | truncatewords: 40 }}</summary>
  </entry>
  {% endunless %} {% endfor %}
</feed>
